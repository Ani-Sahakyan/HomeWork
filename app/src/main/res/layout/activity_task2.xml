<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView
    android:id="@+id/form"
    android:layout_width="0dp"
    android:layout_height="70dp"
    android:background="@color/teal"
    android:text="DETAILS FORM"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:textStyle="bold"
    android:gravity="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
        android:id="@+id/l_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Last Name"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/form"
        app:layout_constraintStart_toStartOf="@id/form"
    />
    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/l_name"
        app:layout_constraintTop_toTopOf="@+id/l_name"
        app:layout_constraintBottom_toBottomOf="@+id/l_name"
        app:layout_constraintEnd_toEndOf="@+id/form"

        />


    <TextView
        android:id="@+id/f_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*First Name"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/l_name"
        app:layout_constraintStart_toStartOf="@id/form"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/f_name"
        app:layout_constraintTop_toTopOf="@+id/f_name"
        app:layout_constraintBottom_toBottomOf="@+id/f_name"
        app:layout_constraintEnd_toEndOf="@+id/form"

        />
    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Gender"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/f_name"
        app:layout_constraintStart_toStartOf="@id/form"
        app:layout_constraintEnd_toStartOf="@id/male"
        />
    <RadioButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/gender"
        app:layout_constraintTop_toTopOf="@+id/gender"

        />

    <RadioButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/male"
        app:layout_constraintTop_toTopOf="@+id/gender"
        />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age on december 10,2018"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        app:layout_constraintStart_toStartOf="@id/form"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/age"
        app:layout_constraintTop_toTopOf="@+id/age"
        app:layout_constraintBottom_toBottomOf="@+id/age"
        app:layout_constraintEnd_toEndOf="@+id/form"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/age"
        app:layout_constraintTop_toBottomOf="@+id/age"
        android:text="SUBMIT"
        android:textSize="25sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>